<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"

    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"

android:background="@drawable/flying_v_1680x1050"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:orientation="vertical" android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="407dp"
            android:layout_height="79dp"
            android:layout_marginTop="42dp"
            android:scaleType="centerInside"
            android:id="@+id/imageView2"
            android:src="@drawable/bulbtwo"
            android:layout_gravity="center"
            android:layout_weight="0.01" />

        <TextView android:text="Welcome " android:layout_width="fill_parent"
            android:layout_marginTop="23dp"
            android:layout_height="wrap_content" android:layout_weight="0.04"
            android:textStyle="bold" android:textColor="#000000" android:textSize="25sp" android:gravity="center"
            />

        <LinearLayout
            android:layout_marginTop="43dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_weight="0.06">


            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:id="@+id/racfId"
                android:hint="  Enter RACF Id to register "
                android:ems="10"/>

            <Button
                android:id="@+id/add"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginTop="26dp"
                android:text="Register"
                android:textColor="@color/black"
                android:textSize="23dp"
                android:textStyle="normal"
                android:background="@color/yellow"

                />

        </LinearLayout>

        <TextView android:id="@+id/message" android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_weight="0.04" android:textColor="#367c2b" android:gravity="center"/>

        </LinearLayout>
</RelativeLayout>
